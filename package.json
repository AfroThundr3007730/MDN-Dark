{
  "name": "mdn-dark",
  "title": "MDN Dark",
  "version": "1.1.0",
  "description": "Dark theme for the Mozilla Developer Network",
  "license": "GPL-3.0",
  "repository": "https://github.com/AfroThundr3007730/MDN-Dark",
  "homepage": "https://github.com/AfroThundr3007730/MDN-Dark",
  "main": "mdn-dark.user.css",
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-silverwind": "^13.4.3",
    "perfectionist": "^2.4.0",
    "stylelint": "^13.6.0",
    "stylelint-config-standard": "^20.0.0",
    "updates": "^10.2.13",
    "versions": "^8.4.0"
  },
  "scripts": {
    "authors": "bash tools/authors",
    "clean": "npm run perfectionist && node tools/fix-perfectionist.js",
    "eslint": "eslint --quiet --color tools/*.js",
    "patch": "npx ver -p patch mdn-dark.user.css",
    "minor": "npx ver -p minor mdn-dark.user.css",
    "major": "npx ver -p major mdn-dark.user.css",
    "perfectionist": "npx perfectionist mdn-dark.user.css mdn-dark.user.css --indentSize 2 --maxAtRuleLength 250",
    "stylelint": "npx stylelint --color -- mdn-dark.user.css",
    "test": "npm run eslint && npm run stylelint",
    "update": "npx updates -cu && rm -rf node_modules && npm install"
  }
}
